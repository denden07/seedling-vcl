    <input type="hidden" name="{{ form.fields.profiles['modules/dashboard/client'].properties.is_enabled.name }}" value="{{ form.fields.profiles['modules/dashboard/client'].properties.is_enabled.value }}">
    <input type="hidden" name="{{ form.fields.profiles['modules/dashboard/client'].properties.is_activated.name }}" value="true">
{% endform %}